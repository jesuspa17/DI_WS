<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L"
        android:width="50dp"
        android:height="50dp"
        android:id="@+id/txt_letra"
        android:background="#a9ff68"
        android:gravity="center"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Los escarabajos"
        android:id="@+id/txt_titutlo"
        android:paddingLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txt_letra"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewEstrella"
        android:src="@android:drawable/star_off"
        android:padding="10dp"
        android:layout_alignBottom="@+id/txt_letra"
        android:layout_alignParentEnd="true" />
</RelativeLayout>