<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="10dp"
    android:id="@+id/lista">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tim"
        android:id="@+id/imageViewToro"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SWEAT + SHAPE"
        android:layout_marginLeft="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:id="@+id/textViewNombre"
        android:layout_marginBottom="5dp"
        android:textSize="15dp"
        android:textColor="#010101"
        android:layout_alignTop="@+id/textViewMinutos"
        android:layout_toEndOf="@+id/imageViewToro"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:id="@+id/textViewMinutos"
        android:paddingTop="7dp"
        android:paddingLeft="6.3dp"
        android:textSize="10dp"
        android:textColor="#010101"
        android:layout_alignEnd="@+id/textViewNombre"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageViewToro"
        android:layout_alignBottom="@+id/imageViewToro"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MIN"
        android:paddingLeft="3.5dp"
        android:id="@+id/textView"
        android:textSize="10dp"
        android:textColor="#010101"
        android:layout_below="@+id/imageViewToro"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/flec"
        android:id="@+id/imageView"
        android:layout_marginTop="3dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/textView" />


</RelativeLayout>