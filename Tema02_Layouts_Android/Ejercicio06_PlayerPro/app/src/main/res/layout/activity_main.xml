<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="#373b3e"
            android:weightSum="1"
            android:layout_weight="0.03"
            android:id="@+id/contenido">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:id="@+id/button"
                android:src="@drawable/back_arrow"
                android:background="@drawable/borde_boton"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:id="@+id/disco"
                android:layout_weight="0.97">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Leiva"
                        android:id="@+id/textView"
                        android:textColor="#afafaf"
                        android:textStyle="bold"
                        android:paddingTop="3dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="1/12"
                        android:id="@+id/textView2"
                        android:background="@drawable/borde"
                        android:textSize="12dp"
                        android:textColor="#312f28"
                        android:padding="2dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Afuera en la ciudad"
                        android:id="@+id/textView3"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="PÃ³lvora - Disco completo"
                    android:layout_marginTop="-2dp"
                    android:id="@+id/textView4"
                    android:textColor="#afafaf"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:id="@+id/buttonlist"
                android:src="@drawable/list"
                android:background="@drawable/borde_boton"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#373b3e"
            android:weightSum="1"
            android:id="@+id/linearLayout2"
            android:layout_gravity="right">

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:id="@+id/button3"
                android:src="@drawable/volume"
                android:background="#373b3e" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:id="@+id/linearLayout"
                android:layout_weight="0.97"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/star_2" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView2"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/star_2"
                    android:paddingLeft="2dp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView3"
                    android:layout_gravity="center_horizontal"
                android:src="@drawable/star_2" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView4"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/star_2" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView5"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/star_2" />

            </LinearLayout>

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:src="@drawable/control"
                android:id="@+id/button4"
                android:background="#373b3e"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#b7b7b7"
            android:layout_weight="1.02">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:src="@drawable/polvora" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_gravity="center_horizontal"
            android:background="#3e4245"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:weightSum="1"
                android:layout_weight="0.73"
                android:gravity="center"
                android:background="#373b3e">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton"
                    android:src="@drawable/shuffle"
                    android:background="#373b3e"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton2"
                    android:src="@drawable/rewindt"
                    android:background="#373b3e"
                    android:paddingLeft="25dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_play"
                    android:src="@drawable/play"
                    android:background="#373b3e"
                    android:layout_weight="0.22" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton4"
                    android:src="@drawable/forward"
                    android:background="#373b3e" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton5"
                    android:src="@drawable/repeat"
                    android:background="#373b3e"
                    android:paddingLeft="25dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20
                "
                android:weightSum="1"
                android:gravity="center"
                android:background="#373b3e">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="2:44"
                    android:id="@+id/textView5"
                    android:textColor="#cacbbd"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar"
                    android:layout_weight="0.70"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:progress="50"
                    android:progressTint="#1fa72f" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="4:05"
                    android:id="@+id/textView6"
                    android:textColor="#cacbbd"
                    android:textStyle="bold"/>
                mar
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
