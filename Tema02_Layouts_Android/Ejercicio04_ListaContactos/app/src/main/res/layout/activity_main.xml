<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main"
    android:background="#00ffadfd">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:background="@drawable/bordes">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Miguel"
            android:id="@+id/textView"
            android:gravity="center"
            android:textColor="#010101"
            android:textSize="25dp"
            android:paddingLeft="5dp"/>

        <RelativeLayout
            android:layout_width="179dp"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/enviarMiguel"
                android:src="@drawable/sendial"
                android:background="#ffffff"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="629885871"
                android:id="@+id/tlf_miguel"
                android:textSize="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="5dp"
                android:textColor="#010000" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_llamarMiguel"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/phone"
                android:paddingLeft="17dp"
                android:background="#ffffff" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:background="@drawable/bordes"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="JesÃºs"
            android:id="@+id/textViewJesus"
            android:gravity="center"
            android:textColor="#010101"
            android:textSize="25dp"
            android:paddingLeft="5dp"/>

        <RelativeLayout
            android:layout_width="185dp"
            android:layout_height="match_parent" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/enviarJesus"
                android:src="@drawable/sendial"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="664595724"
                android:id="@+id/tlf_jesus"
                android:textSize="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="5dp"
                android:textColor="#010101"
                android:paddingLeft="7dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativejesus">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_llamarJesus"
                android:src="@drawable/phone"
                android:background="#ffffff"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="17dp"/>/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
